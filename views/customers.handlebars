<!-- Jumbotron - Add form -->
<div class="container">
   <!-- div collapseable -->
   <button class="btn btn-success add-form-btn">Add Customer</button>
   <button class="btn btn-danger add-form-cancel hide">Cancel</button>
   <div class="add-form-collapseable my_collapse">
      <!-- <div class="col-lg-7"> -->
      <h2 class="page-heading">Add Customer</h2>
      <div class="jumbotron">
         <form action="/customers" method="POST">
            <div class="container">
               <u>NAME</u>
               <div class="row">
                  <div class="col-lg-1">
                     First<input type="text" name="fname" required><br>
                  </div>
                  <div class="col-lg-1 col-lg-offset-2">
                     Last<input type="text" name="lname" required><br>
                  </div>
               </div>
               <br>
               <u>ADDRESS</u>
               <div class="row">
                  <div class="col-lg-1">
                     Street<input type="text" name="street" required><br>
                  </div>
                  <div class="col-lg-1 col-lg-offset-2">
                     City<input type="text" name="city" required><br>
                  </div>
                  <div class="col-lg-1 col-lg-offset-2">
                     State<input type="text" name="state" required><br>
                  </div>
                  <div class="col-lg-1 col-lg-offset-2">
                     Zip<input type="number" name="zip" required><br>
                  </div>
               </div>
               <br>
               <u>CONTACT</u>
               <div class="row">
                  <div class="col-lg-1">
                     Phone<input type="text" name="phone" required><br>
                  </div>
                  <div class="col-lg-1 col-lg-offset-2">
                     Email<input type="text" name="email" required><br>
                  </div>
               </div>
               <br>
               <div class="row text-right">
                  <button type="submit" class="btn btn-primary btn-lg">SUBMIT</button>
               </div>
            </div>
         </form>
      </div>
      <!-- </div> -->
   </div>
   <!-- div collapseable -->
</div>
<br>
<form action="/update_customer" method="POST">
  <!-- Modal -->
  <div class="modal fade" id="updateModal" role="dialog">
     <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
           <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Update Customer</h4>
           </div>
           <div class="modal-body">
              <div class="container">
                 <div class="container">
                    <u>NAME</u>
                    <div class="row">
                       <input type="hidden" name="customer_id_holder" id="customer_id_holder" value="" required>
                       <div class="col-lg-1">
                       	  First<input type="text" name="first_name" id="first_name" required><br>
                       </div>
                       <div class="col-lg-1 col-lg-offset-2">
                          Last<input type="text" name="last_name" id="last_name" required><br>
                       </div>
                    </div>
                    <br>
                    <u>ADDRESS</u>
                    <div class="row">
                       <div class="col-lg-1">
                          Street<input type="text" name="street" id="street" required><br>
                       </div>
                       <div class="col-lg-1 col-lg-offset-2">
                          City<input type="text" name="city" id="city" required><br>
                       </div>
                    </div>
                    <br>
                    <div class="row">
                       <div class="col-lg-1">
                          State<input type="text" name="state" id="state" required><br>
                       </div>
                       <div class="col-lg-1 col-lg-offset-2">
                          Zip<input type="number" name="zip" id="zip" required><br>
                       </div>
                    </div>
                    <br>
                    <u>CONTACT</u>
                    <div class="row">
                       <div class="col-lg-1">
                          Phone<input type="text" name="phone" id="phone" required><br>
                       </div>
                       <div class="col-lg-1 col-lg-offset-2">
                          Email<input type="text" name="email" id="email" required><br>
                       </div>
                    </div>
                    <br>
                 </div>
              </div>
              <div class="modal-footer">
                 <button type="submit" class="btn btn-primary btn-sm">SUBMIT</button>
                 <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">CLOSE</button>
              </div>
           </div>
        </div>
     </div>
  </div>
</form>
<div class="container">
   <!-- <div class="col-lg-12"> -->
   <h2 class="page-heading">Customers</h2>
   <div class="jumbotron">
     <!-- search bar -->
     <div class="row pull-right input-group hide">
       <span class="glyphicon glyphicon-search table-search-icon">
       </span>
       <input class="table-search" type="text" placeholder="search...">
     </div>

      <table class="table table-hover table-bordered">
         <thead align="Center">
            <tr>
               <th>Customer ID</th>
               <th>First Name</th>
               <th>Last Name</th>
               <th>Street</th>
               <th>City</th>
               <th>State</th>
               <th>Zip</th>
               <th>Phone</th>
               <th>Email</th>
               <th>Update</th>
            </tr>
         </thead>
         <tbody class="table-searchable">
           {{#each rows}}
            <tr>
               <td>{{customer_id}}</td>
               <td>{{first_name}}</td>
               <td>{{last_name}}</td>
               <td>{{street}}</td>
               <td>{{city}}</td>
               <td>{{state}}</td>
               <td>{{zip}}</td>
               <td>{{phone}}</td>
               <td>{{email}}</td>
               <td>
                  <div class="row text-center">
                     <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#updateModal" title="update_customer" value={{customer_id}}>UPDATE</button>
                  </div>
               </td>
            </tr>
            {{/each}}
         </tbody>
      </table>
      <br>
   </div>
   <!-- </div> -->
</div>
